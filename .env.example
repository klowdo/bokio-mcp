# Bokio MCP Server Configuration
# Copy this file to .env and fill in your values

# Required - OAuth2 credentials from Bokio Developer Portal
BOKIO_CLIENT_ID=your_client_id_here
BOKIO_CLIENT_SECRET=your_client_secret_here

# Optional - API configuration
BOKIO_BASE_URL=https://api.bokio.se
BOKIO_REDIRECT_URL=http://localhost:8080/callback

# Optional - Security settings
BOKIO_READ_ONLY=false
